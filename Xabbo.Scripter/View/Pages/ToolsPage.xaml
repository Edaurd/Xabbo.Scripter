<Page x:Class="Xabbo.Scripter.View.Pages.ToolsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Xabbo.Scripter.View.Pages"
      xmlns:view="clr-namespace:Xabbo.Scripter.View"
      xmlns:viewModel="clr-namespace:Xabbo.Scripter.ViewModel"
      xmlns:dragablz="http://dragablz.net/winfx/xaml/dragablz"
      xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ToolsPage"
      d:DataContext="{d:DesignInstance Type={x:Type viewModel:ToolsViewManager}}">
    <dragablz:TabablzControl>
        <dragablz:TabablzControl.ItemContainerStyle>
            <Style TargetType="{x:Type dragablz:DragablzItem}" BasedOn="{StaticResource MaterialDesignDragableTabItemStyle}">
                <Setter Property="Height" Value="25" />
                <Setter Property="Padding" Value="8,0" />
            </Style>
        </dragablz:TabablzControl.ItemContainerStyle>
        <TabItem Header="Furni">
            <view:FurniDataView DataContext="{Binding FurniData}" />
        </TabItem>
    </dragablz:TabablzControl>
</Page>
